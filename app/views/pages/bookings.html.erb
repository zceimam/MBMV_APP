
<div id="bookings-container">
  <% if @bookings == [] %>
  <h1> You have no booking </h1>
  <% else %>
    <h1>Your Bookings:</h1>
  <% end %>
  <div class="row">
    <% @bookings.each do |booking| %>
      <div>
        <div class="flat-card-trip mx-auto ">
          <div class="card_img">
            <%= cl_image_tag(booking.flat.photo) %>
          </div>
          <div id="dates">
            <%= booking.start_date %>
            <%= booking.end_date %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

