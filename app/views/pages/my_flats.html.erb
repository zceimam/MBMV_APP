
<div class="container">
  <div class="title">
    <h1 id="my_flats-title">
      The places you own in the Galaxy
    </h1>
  </div>
  <div class="row">
    <% @flats.each do |flat| %>
      <%= link_to flat_path(flat) do %>
      <div class="col-12 col-lg-6 mt-3">
        <div class="flat-card-trip mx-auto ">
          <div class="card_img">
          <%= cl_image_tag(flat.photo) %>
          </div>
          <div class="flat-card-trip-infos">
            <div>
              <h2><%= link_to flat.description, flat_path(flat) %></h2>
            </div>
            <h2 class="flat-card-trip-pricing"><%= flat.price %> $</h2>
            <%= cl_image_tag flat.user.avatar, :class => "flat-card-trip-user avatar-bordered" %>
          </div>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
</div>
