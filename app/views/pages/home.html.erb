<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path 'bannerimage.jpg' %>);">
  <div class="container">
    <h1>Welcome to MBMV, book your room in<strong> outer space</strong>!</h1>
    <p>Spend a night at the ISS</p>
  </div>
</div>

<div class="cards">
  <div class="container">
    <div class="row">
      <% @flats.each do |flat| %>
        <div class="col-12 col-lg-6">
          <div class="card-trip mx-auto">
            <%= image_tag("land-views.png") %>
            <div class="card-trip-infos">
              <div>
                <h2><%= link_to flat.description, flat_path(flat) %></h2>
                <p>Short description here!</p>
              </div>
              <h2 class="card-trip-pricing"><%= flat.price %> $</h2>
              <img src='https://kitt.lewagon.com/placeholder/users/krokrob' class="card-trip-user avatar-bordered"/>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

